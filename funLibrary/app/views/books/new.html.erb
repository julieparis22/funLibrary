<h1>Ajouter un nouveau livre</h1>

<%= form_with model: @book, local: true do |form| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "erreur") %> empêchent la création du livre :</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, "Titre" %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
  <%= form.label :author, "Auteurs (séparés par des virgules)" %>
  <%= form.text_field :author, value: @book.author.present? ? @book.author.join(", ") : "" %>
</div>

  <div class="field">
    <%= form.label :is_borrowed, "Emprunté ?" %>
    <%= form.check_box :is_borrowed %>
  </div>

  <div class="field">
    <%= form.label :date, "Date de retour (optionnel)" %>
    <%= form.date_field :date %>
  </div>

  <div class="actions">
    <%= form.submit "Créer le livre", class: 'btn btn-success' %>
  </div>
<% end %>

<%= link_to 'Retour à la liste', books_path, class: 'btn btn-secondary' %>
