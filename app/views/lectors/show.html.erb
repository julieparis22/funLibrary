<h1>Lector Details</h1>

<p>
  <strong>First Name:</strong>
  <%= @lector.first_name %>
</p>

<p>
  <strong>Last Name:</strong>
  <%= @lector.last_name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @lector.address %>
</p>

<p>
  <strong>Email:</strong>
  <%= @lector.email %>
</p>

<p>
  <strong>UUID:</strong>
  <%= @lector.uuid %>
</p>

<%= link_to 'Edit', edit_lector_path(@lector), class: 'btn btn-warning' %> |
<%= link_to 'Back', lectors_path, class: 'btn btn-secondary' %>

<%= link_to 'Delete', lector_path(@lector), method: :delete, data: { confirm: 'Are you sure you want to delete this lector?' }, class: 'btn btn-danger' %>
