<h1>Liste des Livres</h1>
<%= link_to '+ Ajouter un livre', new_book_path, class: 'btn btn-success' %>
<% if @books.present? %>
  <table class="table table-striped table-bordered">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>Titre</th>
        <th>Auteur(s)</th>
        <th>Emprunté ?</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.id %></td>
          <td><%= book.title %></td>
          <td><%= book.author %></td>

          <td><%= book.is_borrowed ? "Oui" : "Non" %></td>
          <td><%= book.date || "Non spécifiée" %></td>
          
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Aucun livre trouvé.</p>
<% end %>
